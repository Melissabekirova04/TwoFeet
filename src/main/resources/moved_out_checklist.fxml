<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="520" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.MovedOutChecklistController">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-background-color: #02213A;">
            <padding>
                <Insets bottom="10" left="15" right="15" top="15" />
            </padding>

            <Label prefHeight="35.0" prefWidth="257.0" text="Moving Essentials" textFill="WHITE">
            <font>
               <Font name="Calibri Bold" size="30.0" />
            </font></Label>

            <Label text="Choose what you need:" textFill="#f49338">
            <font>
               <Font name="Calibri Bold Italic" size="18.0" />
            </font></Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="30" />
            </padding>

            <Button onAction="#onBeforeMovingOut" prefWidth="240" text="Before moving out" />

            <Button onAction="#onStarterPack" prefWidth="240" text="Starter pack" />
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER_RIGHT" style="-fx-background-color: #02213A;">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button alignment="CENTER" onAction="#onBackToMain" text="Back to Main Menu">
            <font>
               <Font name="Calibri Bold" size="18.0" />
            </font></Button>
        </VBox>
    </bottom>


</BorderPane>
