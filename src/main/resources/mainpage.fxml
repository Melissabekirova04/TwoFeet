<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="844.0" prefWidth="399.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.MainPageController">

    <children>
        <HBox prefHeight="536.0" prefWidth="399.0">
            <children>

                <!-- MAIN CONTENT -->
                <AnchorPane prefHeight="835.0" prefWidth="399.0">
                    <children>

                        <!-- BUTTONS -->
                        <Button fx:id="movingOutChecklistButton" layoutX="122.0" layoutY="221.0" mnemonicParsing="false" onAction="#movingOutChecklistButtonOnAction" prefHeight="28.0" prefWidth="157.0" style="-fx-background-color: #FD841E;" text="Moved Out Checklist">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>

                        <Button fx:id="todoButton" layoutX="122.0" layoutY="391.0" mnemonicParsing="false" onAction="#todoButtonOnAction" prefHeight="26.0" prefWidth="157.0" style="-fx-background-color: #FD841E;" text="Todo List">
                            <font>
                                <Font name="Calibri Bold" size="13.0" />
                            </font>
                        </Button>

                        <ImageView fx:id="todoImageView" fitHeight="121.0" fitWidth="121.0" layoutX="140.0" layoutY="276.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@ShoppingList.png" />
                            </image>
                        </ImageView>

                        <ImageView fx:id="checklistImageView" fitHeight="121.0" fitWidth="121.0" layoutX="140.0" layoutY="107.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Checklist.png" />
                            </image>
                        </ImageView>
                  <AnchorPane layoutY="-5.0" prefHeight="75.0" prefWidth="399.0" style="-fx-background-color: #02213A;">
                     <children>
                                <ImageView fx:id="logoImageView" fitHeight="82.0" fitWidth="88.0" layoutX="14.0" layoutY="4.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Logo1.png" />
                                    </image>
                                </ImageView>
                     </children>
                  </AnchorPane>
            
                        <!-- IMAGES (must not block clicks) -->
                        <ImageView fx:id="budgetImageView" fitHeight="121.0" fitWidth="121.0" layoutX="140.0" layoutY="443.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Budget.png" />
                            </image>
                        </ImageView>

                    </children>
                </AnchorPane>
            </children>
        </HBox>

            <Button fx:id="helpServiceButton" layoutX="121.0" layoutY="726.0" mnemonicParsing="false" onAction="#helpServiceButtonOnAction" prefHeight="26.0" prefWidth="157.0" style="-fx-background-color: #FD841E;" text="Help Service">
                <font>
                    <Font name="Calibri Bold" size="13.0" />
                </font>
            </Button>

            <ImageView fx:id="helpServiceImageView" fitHeight="133.0" fitWidth="132.0" layoutX="134.0" layoutY="607.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@Guide.png" />
                </image>
            </ImageView>

                        <Button fx:id="budgetButton" layoutX="121.0" layoutY="559.0" mnemonicParsing="false" onAction="#budgetButtonOnAction" prefHeight="26.0" prefWidth="157.0" style="-fx-background-color: #FD841E;" text="Budget">
                <font>
                    <Font name="Calibri Bold" size="13.0" />
                </font>
            </Button>
    </children>
</AnchorPane>
