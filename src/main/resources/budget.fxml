<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #02213A;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.BudgetController">

    <children>
        <VBox spacing="16" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

            <Label text="Budget" textFill="WHITE">
                <font><Font name="Calibri Bold" size="36.0" /></font>
            <VBox.margin>
               <Insets left="7.0" />
            </VBox.margin>
            </Label>

            <!-- Periode -->
            <VBox spacing="6" style="-fx-background-color: #f2f2f7; -fx-background-radius: 16;">
                <padding><Insets bottom="14" left="14" right="14" top="14" /></padding>

                <Label text="Vælg periode">
               <font>
                  <Font name="Calibri Bold" size="14.0" />
               </font></Label>
                <ComboBox fx:id="periodCombo" prefWidth="240" style="-fx-background-color: #F49338;" />

                <HBox spacing="10">
                    <Label text="Periode:" />
                    <Label fx:id="periodDatesLabel" text="-" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label text="Dage:" />
                    <Label fx:id="daysLabel" text="-" />
                </HBox>
            </VBox>

            <!-- Input -->
            <VBox spacing="10" style="-fx-background-color: #f2f2f7; -fx-background-radius: 16;">
                <padding><Insets bottom="14" left="14" right="14" top="14" /></padding>

                <Label text="Indtast budget">
               <font>
                  <Font name="Calibri Bold" size="14.0" />
               </font></Label>

                <HBox spacing="10">
                    <VBox spacing="4">
                        <Label text="Budget/indtægt for perioden (kr.)" />
                        <TextField fx:id="incomeField" promptText="fx 8000" />
                    </VBox>
                    <VBox spacing="4">
                        <Label text="Opsparing (kr.)" />
                        <TextField fx:id="savingsField" promptText="fx 500" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Faste udgifter -->
            <VBox spacing="10" style="-fx-background-color: #f2f2f7; -fx-background-radius: 16;">
                <padding><Insets bottom="14" left="14" right="14" top="14" /></padding>

                <Label text="Faste udgifter">
               <font>
                  <Font name="Calibri Bold" size="14.0" />
               </font></Label>

                <HBox spacing="10">
                    <TextField fx:id="expenseNameField" prefWidth="220" promptText="Navn (fx Husleje)" />
                    <TextField fx:id="expenseAmountField" prefWidth="120" promptText="Beløb (kr.)" />
                    <Button onAction="#addExpense" prefHeight="25.0" prefWidth="48.0" style="-fx-background-color: #F49338;" text="Tilføj" />
                    <Button onAction="#removeSelectedExpense" style="-fx-background-color: #F49338;" text="Fjern valgt" />
                </HBox>

                <ListView fx:id="expensesList" prefHeight="120" />
            </VBox>

            <!-- Resultat -->
            <VBox spacing="8" style="-fx-background-color: #f2f2f7; -fx-background-radius: 16;">
                <padding><Insets bottom="14" left="14" right="14" top="14" /></padding>

                <Label text="Resultat">
               <font>
                  <Font name="Calibri Bold" size="14.0" />
               </font></Label>

                <HBox spacing="10">
                    <Label text="Faste udgifter i alt:" />
                    <Label fx:id="totalFixedLabel" text="0.00 kr" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Rådighedsbeløb:" />
                    <Label fx:id="disposableLabel" text="-" />
                </HBox>

                <HBox spacing="10">
                    <Label style="-fx-font-weight: bold;" text="Dagligdags-budget:" />
                    <Label fx:id="dailyBudgetLabel" style="-fx-font-weight: bold;" text="-" />
                </HBox>

                <Button onAction="#calculateBudget" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #F49338;" text="Beregn budget" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="14.0" />
               </font></Button>
            </VBox>

            <Button fx:id="backButton" onAction="#backButtonOnAction" prefHeight="34.0" prefWidth="85.0" text="Back">
            <font>
               <Font name="Calibri Bold" size="18.0" />
            </font></Button>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Mine budgetter"
                        onAction="#openBudgetHistory"
                        style="-fx-background-color: #F49338; -fx-text-fill: white;"
                        prefHeight="34"
                        prefWidth="150"/>
            </HBox>


        </VBox>
    </children>
</AnchorPane>
