<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.MovedOutChecklistController"
            prefWidth="520" prefHeight="600">

    <top>
        <VBox spacing="8" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15"/>
            </padding>

            <Label text="Moving Essentials"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <Label text="Choose what you need:"
                   style="-fx-font-size: 13px; -fx-opacity: 0.85;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="30" right="20" bottom="20" left="20"/>
            </padding>

            <Button text="Before moving out"
                    prefWidth="240"
                    onAction="#onBeforeMovingOut"/>

            <Button text="Starter pack"
                    prefWidth="240"
                    onAction="#onStarterPack"/>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER_RIGHT" padding="15">
            <Button text="Back to Main Menu" onAction="#onBackToMain"/>
        </VBox>
    </bottom>

</BorderPane>
